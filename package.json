{
  "dependencies": {
    "@changesets/cli": "2.17.0",
    "@changesets/get-github-info": "0.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/fragment-matcher": "3.1.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-apollo-client-helpers": "2.1.4",
    "@graphql-codegen/typescript-operations": "2.1.6",
    "@graphql-tools/utils": "8.2.5",
    "concurrently": "6.3.0",
    "graphql": "15.6.1"
  },
  "private": true,
  "scripts": {
    "be": "yarn workspace wingman-be",
    "fe": "yarn workspace wingman-fe",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint",
    "stage": "changeset version && yarn format",
    "release": "yarn be build && changeset publish",
    "test": "yarn workspaces run test",
    "codegen": "graphql-codegen --config codegen.yml",
    "deploy": "scripts/deploy"
  },
  "version": "0.0.0",
  "workspaces": {
    "nohoist": [
      "wingman-be/**",
      "wingman-fe/**"
    ],
    "packages": [
      "be",
      "fe"
    ]
  }
}
